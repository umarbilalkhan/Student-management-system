<Page x:ConnectionId='1'
    x:Class="DB_FINAL_PROJECT.Views.EDIT_TEACHERPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel x:ConnectionId='3' x:Name="Visible1" HorizontalAlignment="Center" Visibility="Collapsed">
                <AutoSuggestBox x:ConnectionId='4' x:Name="tidText" Width="300" Text="T001" Header="Teacher id" PlaceholderText="Enter teacher id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='5' x:Name="fnameText" Width="300" Header="First name" PlaceholderText="Enter first name" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='6' x:Name="lnameText" Width="300" Header="Last name" PlaceholderText="Enter last name" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='7' x:Name="userText" Width="300" Header="Username" PlaceholderText="Enter username" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='8' x:Name="emailText" Width="300" Header="Email" PlaceholderText="Enter email" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='9' x:Name="contactText" Width="300" Header="Contact No" PlaceholderText="Enter contact no." FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='10' x:Name="addText" Width="300" Header="Address" PlaceholderText="Enter address" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='11' x:Name="passText" Width="300" Header="Password" PlaceholderText="Enter password" FontSize="15" Margin="0 0 0 30"/>
                <DatePicker x:ConnectionId='12' x:Name="regText" Header="Registration date" Margin="00 0 0 30"/>
                <DropDownButton x:ConnectionId='13' x:Name="bgText" Content="Blood Group" Width="300" Margin="0 0 0 30">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:ConnectionId='20' Text="A+" Width="300"                          />
                            <MenuFlyoutItem x:ConnectionId='21' Text="A-" Width="300"                          />
                            <MenuFlyoutItem x:ConnectionId='22' Text="B+" Width="300"                          />
                            <MenuFlyoutItem x:ConnectionId='23' Text="B-" Width="300"                          />
                            <MenuFlyoutItem x:ConnectionId='24' Text="AB+" Width="300"                           />
                            <MenuFlyoutItem x:ConnectionId='25' Text="AB-" Width="300"                           />
                            <MenuFlyoutItem x:ConnectionId='26' Text="O+" Width="300"                           />
                            <MenuFlyoutItem x:ConnectionId='27' Text="O-" Width="300"                           />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton x:ConnectionId='14' x:Name="genText" Content="Gender" Width="300" Margin="0 0 0 30">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:ConnectionId='17' Text="Male" Width="300"                         />
                            <MenuFlyoutItem x:ConnectionId='18' Text="Female" Width="300"                           />
                            <MenuFlyoutItem x:ConnectionId='19' Text="Other" Width="300"                          />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button x:ConnectionId='15' x:Name="Insert_Button" Width="300" Height="35" FontWeight="Bold" Content="Update" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 50"                           />
                <TeachingTip x:ConnectionId='16' x:Name="Error" Title="Warning! ❌"                                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


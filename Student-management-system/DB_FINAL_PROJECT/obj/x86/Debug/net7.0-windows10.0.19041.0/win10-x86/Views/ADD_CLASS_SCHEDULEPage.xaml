<Page x:ConnectionId='1'
    x:Class="DB_FINAL_PROJECT.Views.ADD_CLASS_SCHEDULEPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel x:ConnectionId='3' x:Name="Visible1" HorizontalAlignment="Center" Visibility="Collapsed">
                <TextBox x:ConnectionId='4' x:Name="schText" Width="300" Header="Schedule" PlaceholderText="Enter schedule no." FontSize="15" Margin="0 30 0 30"/>
                <AutoSuggestBox x:ConnectionId='5' x:Name="cidText" Width="300" Text="" Header="Class id" PlaceholderText="Enter class id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <AutoSuggestBox x:ConnectionId='6' x:Name="tidText" Width="300" Text="" Header="Teacher id" PlaceholderText="Enter class teacher id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='7' x:Name="locText" Width="300" Header="Location" PlaceholderText="Enter location" FontSize="15" Margin="0 0 0 30"/>
                <TimePicker x:ConnectionId='8' x:Name="strText" Header="Start time" Width="300" Margin="0 0 0 30"/>
                <TimePicker x:ConnectionId='9' x:Name="endText" Header="End time" Width="300" Margin="0 0 0 30"/>
                <DropDownButton x:ConnectionId='10' x:Name="dowText" Content="Day of week" Width="300" Margin="0 0 0 30">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:ConnectionId='13' Text="Monday" Width="300"                     />
                            <MenuFlyoutItem x:ConnectionId='14' Text="Tuesday" Width="300"                      />
                            <MenuFlyoutItem x:ConnectionId='15' Text="Wednesday" Width="300"                        />
                            <MenuFlyoutItem x:ConnectionId='16' Text="Thursday" Width="300"                       />
                            <MenuFlyoutItem x:ConnectionId='17' Text="Friday" Width="300"                     />
                            <MenuFlyoutItem x:ConnectionId='18' Text="Saturday" Width="300"                       />
                            <MenuFlyoutItem x:ConnectionId='19' Text="Sunday" Width="300"                     />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button x:ConnectionId='11' x:Name="Insert_Button" Width="300" Height="35" FontWeight="Bold" Content="Insert" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 50"                           />
                <TeachingTip x:ConnectionId='12' x:Name="Error" Title="Warning! ❌"                                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


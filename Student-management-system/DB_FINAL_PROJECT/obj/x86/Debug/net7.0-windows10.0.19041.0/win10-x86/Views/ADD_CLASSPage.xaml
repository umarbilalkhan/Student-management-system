<Page x:ConnectionId='1'
    x:Class="DB_FINAL_PROJECT.Views.ADD_CLASSPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel x:ConnectionId='3' x:Name="Visible1" HorizontalAlignment="Center" Visibility="Collapsed">
                <TextBox x:ConnectionId='4' x:Name="cidText" Width="300" Header="Class id" PlaceholderText="Enter class id" FontSize="15" Margin="0 30 0 30"/>
                <TextBox x:ConnectionId='5' x:Name="semText" Width="300" Header="Semester" PlaceholderText="Enter semester" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='6' x:Name="secText" Width="300" Header="Section" PlaceholderText="Enter section" FontSize="15" Margin="0 0 0 30"/>
                <TextBox x:ConnectionId='7' x:Name="capText" Width="300" Header="Capacity" PlaceholderText="Enter total capacity" FontSize="15" Margin="0 0 0 30"/>
                <AutoSuggestBox x:ConnectionId='8' x:Name="tidText" Width="300" Text="" Header="Teacher id" PlaceholderText="Enter teacher id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <Button x:ConnectionId='9' x:Name="Insert_Button" Width="300" Height="35" FontWeight="Bold" Content="Insert" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 50"                           />
                <TeachingTip x:ConnectionId='10' x:Name="Error" Title="Warning! ❌"                                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


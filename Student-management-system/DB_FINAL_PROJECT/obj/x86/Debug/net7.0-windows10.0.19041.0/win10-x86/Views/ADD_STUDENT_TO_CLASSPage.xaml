<Page x:ConnectionId='1'
    x:Class="DB_FINAL_PROJECT.Views.ADD_STUDENT_TO_CLASSPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel x:ConnectionId='3' x:Name="Visible1" HorizontalAlignment="Center" Visibility="Collapsed">
                <Image x:ConnectionId='4' x:Name="Login_Pic" Source="/Assets/Add_Student_To_Class.png" Height="250" Width="250" Margin="0 0 0 20"/>
                <AutoSuggestBox x:ConnectionId='5' x:Name="sidText" Width="300" Text="" Header="Student id" PlaceholderText="Enter student id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <AutoSuggestBox x:ConnectionId='6' x:Name="cidText" Width="300" Text="" Header="Class id" PlaceholderText="Enter class id"                               QueryIcon="Find" Margin="0 0 0 30"/>
                <Button x:ConnectionId='7' x:Name="Insert_Button" Width="300" Height="35" FontWeight="Bold" Content="Insert" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 50"                           />
                <TeachingTip x:ConnectionId='8' x:Name="Error" Title="Warning! ❌"                                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

